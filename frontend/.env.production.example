# EAS Frontend Environment Configuration - Production
# Copy this to .env.production for production settings

# API Configuration
VITE_API_BASE_URL=https://your-production-domain.com/api/v1
VITE_API_TIMEOUT=15000

# Environment
VITE_NODE_ENV=production
VITE_DEBUG_MODE=false

# Logging Configuration (Production-Safe)
VITE_LOG_LEVEL=error
VITE_ENABLE_CONSOLE_LOGS=false

# Security Settings (Production)
VITE_ENABLE_HTTPS=true
VITE_SECURE_COOKIES=true

# Feature Flags
VITE_ENABLE_QR_SCANNING=true
VITE_ENABLE_LOCATION_VERIFICATION=true
VITE_ENABLE_CAMPUS_SWITCHING=true
VITE_ENABLE_REAL_TIME_UPDATES=true

# External Services (Production)
VITE_MAPBOX_TOKEN=your_production_mapbox_token
VITE_SENTRY_DSN=your_production_sentry_dsn

# Campus Configuration
VITE_DEFAULT_CAMPUS_ID=1
VITE_ENABLE_MULTI_CAMPUS=true

# Production Tools
VITE_ENABLE_API_MOCKING=false
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_ENABLE_ERROR_BOUNDARY=true

# Analytics (Production)
VITE_GOOGLE_ANALYTICS_ID=your_ga_tracking_id
VITE_HOTJAR_ID=your_hotjar_id
