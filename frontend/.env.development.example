# EAS Frontend Environment Configuration - Development
# Copy this to .env.development for development settings

# API Configuration
VITE_API_BASE_URL=http://127.0.0.1:8000/api/v1
VITE_API_TIMEOUT=30000

# Environment
VITE_NODE_ENV=development
VITE_DEBUG_MODE=true

# Logging Configuration
VITE_LOG_LEVEL=debug
VITE_ENABLE_CONSOLE_LOGS=true

# Security Settings (Development)
VITE_ENABLE_HTTPS=false
VITE_SECURE_COOKIES=false

# Feature Flags
VITE_ENABLE_QR_SCANNING=true
VITE_ENABLE_LOCATION_VERIFICATION=true
VITE_ENABLE_CAMPUS_SWITCHING=true
VITE_ENABLE_REAL_TIME_UPDATES=true

# External Services (Development)
VITE_MAPBOX_TOKEN=your_mapbox_token_here
VITE_SENTRY_DSN=your_sentry_dsn_here

# Campus Configuration
VITE_DEFAULT_CAMPUS_ID=1
VITE_ENABLE_MULTI_CAMPUS=true

# Development Tools
VITE_ENABLE_API_MOCKING=false
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_ENABLE_ERROR_BOUNDARY=true
